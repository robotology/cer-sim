<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE robot PUBLIC "-//YARP//DTD yarprobotinterface 3.0//EN" "http://www.yarp.it/DTD/yarprobotinterfaceV3.0.dtd">

<device name="cbremapper_cer_all_no_arms" type="controlboardremapper">
    <paramlist name="networks">
        <elem name="torso">( 0 3 0 3 )</elem>
        <elem name="mobile_base">( 4 5 0 1 )</elem>
        <elem name="head">( 6 7 0 1 )</elem>
    </paramlist>
    <param name="period"> 0.010 </param>
    <param name="joints"> 8 </param>
    <action phase="startup" level="5" type="attach">
        <paramlist name="networks">
            <elem name="torso">torso_device</elem>
            <elem name="mobile_base">mobile_base_device</elem>
            <elem name="head">head_device</elem>
        </paramlist>
    </action>
    <action phase="shutdown" level="5" type="detach" />
</device>

<device xmlns:xi="http://www.w3.org/2001/XInclude" name="cbw_yarp_mobile_base" type="controlBoard_nws_yarp">
    <param name="name"> /SIM_CER_ROBOT/all_joints </param>
    <action phase="startup" level="7" type="attach">
        <param name="device"> cbremapper_cer_all_no_arms </param>
    </action>
    <action phase="shutdown" level="3" type="detach" />
</device> 